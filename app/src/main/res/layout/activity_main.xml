<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingTop="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="温度"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#000000"
                />
            <com.ysp.androidview.view.TempControlView
                android:id="@+id/tv_water_temp"
                android:layout_width="260dp"
                android:layout_height="260dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="容量"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#000000"
                />
            <com.ysp.androidview.view.RulerView
                android:id="@+id/rv_water_volume"
                android:layout_width="180dp"
                android:layout_height="260dp"
                app:cursorColor="#E27A3F"
                app:scaleColor="#3CB7EA"
                app:scaleHeight="8dp"
                app:scalePointerColor="#E4A07E"
                app:scaleWidth="12dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>